    "VolumeMount"
  ],
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.stenci.la/v0/Thing.schema.json",
  "source": "https://github.com/stencila/schema/blob/master/Thing.schema.yaml",
  "type": "object",
  "propertyAliases": {
    "alternateName": "alternateNames",
    "identifier": "identifiers"
  },
  "additionalProperties": false,
  "required": [
    "type"
  ]
